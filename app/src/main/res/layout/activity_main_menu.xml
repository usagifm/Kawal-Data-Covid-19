<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:id="@+id/welcome"
            app:cardCornerRadius="8dp"
            tools:cardElevation="10dp"
            tools:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnacarboard"
                android:orientation="vertical"
                android:src="@drawable/cardbg1"
                >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/logo"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    >

                </ImageView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>





        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_global"/>







    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:id="@+id/global"
        app:cardCornerRadius="8dp"
        tools:cardElevation="10dp"
        tools:cardPreventCornerOverlap="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warnacarboard"
            android:orientation="vertical"
            android:src="@drawable/cardbg1"

            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:src="@drawable/cardbg1"
                android:textColor="@color/biru"
                >

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:background="@color/warnacarboard"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingLeft="9sp"
                android:paddingTop="7sp"
                android:paddingBottom="10sp"
                android:text="Pantau Data Covid-19 Berdasarkan Negara"
                android:textColor="@color/warnanegera"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:id="@+id/langkah_pencegahan"
            app:cardCornerRadius="8dp"
            tools:cardElevation="10dp"
            tools:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnacarboard"
                android:orientation="vertical"
                android:src="@drawable/cardbg1"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:background="@color/biru"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:text="Langkah Pencegahan Agar Tidak Terserang Virus Covid-19"
                    android:textColor="@color/inpit"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingTop="7sp"
                    android:paddingLeft="9sp"
                    android:text="1. Kurangi aktivitas keluar rumah"
                    android:textColor="@color/warnanegera"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"

                    android:text="2. Cuci tangan sesering mungkin"
                    android:textColor="@color/warnanegera"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingRight="9sp"
                    android:gravity="right"
                    android:paddingBottom="4sp"
                    android:text="Selengkapnya"
                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_indo"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:id="@+id/lokal"
        app:cardCornerRadius="8dp"
        tools:cardElevation="10dp"
        tools:cardPreventCornerOverlap="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warnacarboard"
            android:orientation="vertical"
            android:src="@drawable/cardbg1"

            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:src="@drawable/cardbg2">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:background="@color/warnacarboard"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingLeft="9sp"
                android:paddingTop="7sp"
                android:paddingBottom="10sp"
                android:text="Pantau Data Covid-19 Provinsi Di Indonesia"
                android:textColor="@color/warnanegera"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:id="@+id/gejala"
            app:cardCornerRadius="8dp"
            tools:cardElevation="10dp"
            tools:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnacarboard"
                android:orientation="vertical"
                android:src="@drawable/cardbg1"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:background="@color/biru"
                    android:text="Gejala-Gejala Yang Harus Diwaspadai"
                    android:textColor="@color/inpit"
                    android:textSize="14sp"
                    android:textStyle="bold" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingTop="7sp"
                    android:paddingLeft="9sp"
                    android:text="1. Demam tinggi "
                    android:textColor="@color/warnanegera"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"

                    android:text="2. Batuk-batuk"
                    android:textColor="@color/warnanegera"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"

                    android:text="3. Pilek"
                    android:textColor="@color/warnanegera"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingRight="9sp"
                    android:gravity="right"
                    android:paddingBottom="4sp"
                    android:text="Selengkapnya"
                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:id="@+id/maps"
            app:cardCornerRadius="8dp"
            tools:cardElevation="10dp"
            tools:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnacarboard"
                android:orientation="vertical"
                android:src="@drawable/cardbg1"

                >




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:background="@color/biru"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:text="Rumah sakit yang menangani dan malayani pasien Covid-19"
                    android:textColor="@color/inpit"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="298dp"
                    android:src="@drawable/maps"
                    android:textColor="@color/biru">

                </ImageView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:id="@+id/telfon"
            app:cardCornerRadius="8dp"
            android:onClick="telfoncovid"
            tools:cardElevation="10dp"
            tools:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/biru"
                android:orientation="vertical"
                android:src="@drawable/cardbg1"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"

                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"

                    android:drawableLeft="@drawable/telfon"
                    android:text="Layanan Panggilan Covid-19"
                    android:background="@color/warnacarboard"
                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </ScrollView>

</RelativeLayout>