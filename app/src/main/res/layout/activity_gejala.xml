                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="329dp" />

                <TextView
