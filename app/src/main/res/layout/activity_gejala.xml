<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gejala"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:id="@+id/welcome"
            app:cardCornerRadius="8dp"
            tools:cardElevation="10dp"
            tools:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/warnacarboard"
                android:orientation="vertical"
                android:src="@drawable/cardbg1"
                >


                <ImageView
                    android:layout_width="189dp"
                    android:layout_height="60dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/headerapp">

                </ImageView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/warnacarboard"
                android:orientation="vertical">







                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/warnacarboard"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="15sp"
                    android:paddingBottom="15sp"
                    android:text="Gejala gejala yang harus di waspadai"
                    android:textColor="@color/warnanegera"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="329dp" />






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/warnacarboard"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:text="Virus corona bisa menimbulkan beragam gejala pada pengidapnya. Gejala yang muncul ini bergantung pada jenis virus corona yang menyerang, dan seberapa serius infeksi yang terjadi. Berikut beberapa gejala virus corona yang terbilang ringan:"
                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="329dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/socialdis"
                    android:layout_width="221dp"
                    android:layout_height="216dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    app:cardCornerRadius="8dp"
                    tools:cardElevation="10dp"
                    tools:cardPreventCornerOverlap="false"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="290dp"
                        android:layout_height="224dp"
                        android:layout_gravity="center"
                        android:src="@drawable/batuk">

                    </ImageView>

                </androidx.cardview.widget.CardView>










                <TextView
