                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/warnacarboard"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:text="- Demam yang mungkin cukup tinggi bila pasien mengidap pneumonia."
                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="329dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/warnacarboard"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:text="- Batuk dengan lendir."
                    android:textColor="@color/warnanegera"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="329dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/warnacarboard"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingLeft="9sp"
                    android:paddingTop="7sp"
                    android:paddingBottom="10sp"
                    android:text="- Nyeri dada atau sesak saat bernapas dan batuk."
